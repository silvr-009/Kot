<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f4f4f4">

    <!-- Control Switch -->
    <TextView
        android:id="@+id/controlSwitchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Switch"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <Switch
        android:id="@+id/controlSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Control Gas Detection"
        android:textOff="OFF"
        android:textOn="ON"
        android:thumbTint="@android:color/white"
        android:trackTint="@android:color/holo_red_dark"/>

    <!-- Gas Level Indicator -->
    <TextView
        android:id="@+id/gasLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gas Level"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/gasLevelProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="48"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:progressTint="@android:color/holo_red_light"
        android:backgroundTint="@android:color/darker_gray" />

    <!-- Gas Level Value Text -->
    <TextView
        android:id="@+id/gasLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="48"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Heatmap Section (optional) -->
    <TextView
        android:id="@+id/heatmapLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heatmap Data"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp" />

    <!-- Placeholder for heatmap -->
    <TextView
        android:id="@+id/heatmapData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#777777"
        android:layout_marginTop="8dp"/>
//NOTE: THE HEATMAP SECTION IS COMPLETELY OPTIONAL
</LinearLayout>
